        {
          "datasource": "PepsiCo AppDynamics Licensing",
          "format": "table",
          "rawSql": "WITH daily_costs AS (\n  SELECT \n    a.appd_controller as \"Controller\",\n    a.appd_application_name as \"Application\",\n    COALESCE(s.sector_name, 'Unknown') as \"Sector\",\n    COALESCE(o.owner_name, 'Unknown') as \"Owner\",\n    COALESCE(ar.pattern_name, 'Unknown') as \"Architecture\",\n    DATE(lc.ts) as day,\n    SUM(lc.usd_cost) as daily_cost,\n    SUM(lu.units_consumed) as daily_units\n  FROM applications_dim a\n  LEFT JOIN sectors_dim s ON a.sector_id = s.sector_id\n  LEFT JOIN owners_dim o ON a.owner_id = o.owner_id\n  LEFT JOIN architecture_dim ar ON a.architecture_id = ar.architecture_id\n  LEFT JOIN license_cost_fact lc ON a.app_id = lc.app_id\n    AND lc.ts >= date_trunc('month', $__timeFrom()::timestamptz)\n    AND lc.ts < date_trunc('month', $__timeTo()::timestamptz) + interval '1 month'\n  LEFT JOIN license_usage_fact lu ON a.app_id = lu.app_id\n    AND DATE(lu.ts) = DATE(lc.ts)\n  WHERE a.appd_application_name IS NOT NULL\n    AND ($controller = 'All' OR a.appd_controller = $controller)\n  GROUP BY a.appd_controller, a.appd_application_name, s.sector_name, o.owner_name, ar.pattern_name, DATE(lc.ts)\n)\nSELECT \n  \"Controller\",\n  \"Application\",\n  \"Sector\",\n  \"Owner\",\n  \"Architecture\",\n  COALESCE(SUM(daily_cost), 0) as \"Cost\",\n  COALESCE(SUM(daily_units), 0) as \"Units\"\nFROM daily_costs\nGROUP BY \"Controller\", \"Application\", \"Sector\", \"Owner\", \"Architecture\"\nORDER BY \"Cost\" DESC\nLIMIT 10",
          "refId": "A"
        }
      ],
      "title": "Top 10 Applications by Cost (Current Month)",
      "type": "table"
    }
