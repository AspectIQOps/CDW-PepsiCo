        {
          "datasource": "Pepsico Cost Analytics",
          "format": "table",
          "rawSql": "WITH tier_costs AS (\n  SELECT \n    SUM(CASE WHEN UPPER(COALESCE(lc.tier, '')) = 'PEAK' THEN lc.usd_cost ELSE 0 END) as peak_cost,\n    SUM(lc.usd_cost) as total_cost\n  FROM license_cost_fact lc\n  JOIN applications_dim a ON lc.app_id = a.app_id\n  WHERE lc.ts >= NOW() - INTERVAL '90 days'\n    AND ('$controller' = 'All' OR a.appd_controller = '$controller')\n)\nSELECT \n  CASE WHEN total_cost = 0 THEN 0\n  ELSE (peak_cost / NULLIF(total_cost, 0)) * 100 END as \"Peak %\"\nFROM tier_costs",
          "refId": "A"
        }
      ],
      "title": "Peak Tier Percentage",
      "type": "stat"
