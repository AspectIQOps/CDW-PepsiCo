        {
          "datasource": "Pepsico Cost Analytics",
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT \n  a.appd_application_name as \"Application\",\n  COALESCE(s.sector_name, 'Unknown') as \"Sector\",\n  COALESCE(SUM(lc.usd_cost), 0) as \"Peak Cost\",\n  COALESCE(SUM(lc.usd_cost) * 0.33, 0) as \"Potential Savings\"\nFROM license_cost_fact lc\nJOIN applications_dim a ON lc.app_id = a.app_id\nLEFT JOIN sectors_dim s ON a.sector_id = s.sector_id\nWHERE UPPER(COALESCE(lc.tier, '')) = 'PEAK'\n  AND lc.ts >= NOW() - INTERVAL '90 days'\n  AND a.appd_application_name IS NOT NULL\n  AND ('$controller' = 'All' OR a.appd_controller = '$controller')\nGROUP BY a.appd_application_name, s.sector_name\nHAVING SUM(lc.usd_cost) > 0\nORDER BY \"Peak Cost\" DESC\nLIMIT 10",
