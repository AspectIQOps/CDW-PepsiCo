        {
          "datasource": "Pepsico Cost Analytics",
          "format": "table",
          "rawSql": "SELECT \n  app_name as \"Application\",\n  SUM(total_units) as \"Total Units\"\nFROM (\n  SELECT \n    (SELECT appd_application_name FROM applications_dim WHERE app_id IN (\n      SELECT DISTINCT app_id FROM license_usage_fact \n      WHERE ts >= NOW() - INTERVAL '90 days'\n      LIMIT 1\n    )) as app_name,\n    SUM(total_units) as total_units\n  FROM mv_daily_usage_by_capability\n  WHERE usage_date >= NOW() - INTERVAL '90 days'\n    AND ('$controller' = 'All' OR controller = '$controller')\n  GROUP BY controller\n) sub\nWHERE app_name IS NOT NULL\nGROUP BY app_name\nHAVING SUM(total_units) > 0\nORDER BY \"Total Units\" DESC\nLIMIT 10",
          "refId": "A"
        }
      ],
      "title": "Top 10 Applications by Total Usage",
      "type": "barchart"
