        {
          "datasource": "Pepsico Cost Analytics",
          "format": "time_series",
          "rawSql": "-- Actual historical costs\nSELECT\n  cost_date as time,\n  'Actual Cost' as metric,\n  SUM(total_cost) as value\nFROM mv_daily_cost_by_controller\nWHERE cost_date >= NOW() - INTERVAL '6 months'\n  AND ('$controller' = 'All' OR controller = '$controller')\nGROUP BY cost_date\n\nUNION ALL\n\n-- Linear forecast\nSELECT\n  DATE_TRUNC('month', month_start) as time,\n  'Linear Forecast' as metric,\n  SUM(projected_cost) as value\nFROM forecast_fact ff\nJOIN applications_dim a ON ff.app_id = a.app_id\nWHERE month_start > NOW()\n  AND method = 'linear'\n  AND ('$controller' = 'All' OR a.appd_controller = '$controller')\nGROUP BY DATE_TRUNC('month', month_start)\n\nORDER BY time",
          "refId": "A"
        }
      ],
      "title": "12-Month Cost Forecast (Linear Model)",
      "type": "timeseries"
