        {
          "datasource": "Pepsico Cost Analytics",
          "format": "table",
          "rawSql": "WITH daily_totals AS (\n  SELECT \n    cost_date as day,\n    SUM(total_cost) as daily_cost\n  FROM mv_daily_cost_by_controller\n  WHERE cost_date >= NOW() - INTERVAL '60 days'\n    AND ('$controller' = 'All' OR controller = '$controller')\n  GROUP BY cost_date\n  ORDER BY day DESC\n  LIMIT 30\n),\nperiods AS (\n  SELECT \n    AVG(CASE WHEN day >= NOW() - INTERVAL '30 days' THEN daily_cost END) as recent_avg,\n    AVG(CASE WHEN day < NOW() - INTERVAL '30 days' THEN daily_cost END) as previous_avg\n  FROM daily_totals\n)\nSELECT \n  CASE \n    WHEN previous_avg IS NULL OR previous_avg = 0 THEN 0\n    ELSE ((recent_avg - previous_avg) / NULLIF(previous_avg, 0)) * 100\n  END as \"Cost Trend\"\nFROM periods",
          "refId": "A"
        }
      ],
      "title": "Cost Trend (MoM)",
      "type": "stat"
