          "datasource": "PepsiCo AppDynamics Licensing",
          "format": "table",
          "rawSql": "SELECT \n  COALESCE(s.sector_name, 'Unknown') as \"Sector\",\n  COALESCE(SUM(CASE WHEN c.chargeback_cycle = 'direct' THEN c.usd_amount ELSE 0 END), 0) as \"Direct Costs\",\n  COALESCE(SUM(CASE WHEN c.chargeback_cycle != 'direct' THEN c.usd_amount ELSE 0 END), 0) as \"Allocated Costs\",\n  COALESCE(SUM(c.usd_amount), 0) as \"Total\"\nFROM chargeback_fact c\nLEFT JOIN sectors_dim s ON c.sector_id = s.sector_id\nWHERE c.month_start >= date_trunc('month', $__timeFrom()::timestamptz)\n  AND c.month_start < date_trunc('month', $__timeTo()::timestamptz) + interval '1 month'\nGROUP BY s.sector_name\nORDER BY \"Total\" DESC",
