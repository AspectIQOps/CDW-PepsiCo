        {
          "datasource": "PepsiCo AppDynamics Licensing",
          "format": "time_series",
          "rawSql": "-- Historical actual data\nSELECT \n  DATE(ts) as time,\n  'Actual Cost' as metric,\n  COALESCE(SUM(usd_cost), 0) as value\nFROM license_cost_fact\nWHERE ts >= $__timeFrom()::timestamptz\n  AND ts <= $__timeTo()::timestamptz\nGROUP BY DATE(ts)\n\nUNION ALL\n\n-- Forecasted data\nSELECT \n  month_start as time,\n  'Projected Cost' as metric,\n  COALESCE(SUM(projected_cost), 0) as value\nFROM forecast_fact\nWHERE month_start >= DATE_TRUNC('month', CURRENT_DATE)\n  AND month_start <= DATE_TRUNC('month', CURRENT_DATE) + INTERVAL '12 months'\nGROUP BY month_start\n\nORDER BY time",
          "refId": "A"
        }
      ],
      "title": "Historical + Forecast Combined (Actual vs Projected)",
      "type": "timeseries"
    },
