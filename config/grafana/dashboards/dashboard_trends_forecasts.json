        {
          "datasource": "PepsiCo AppDynamics Licensing",
          "format": "table",
          "rawSql": "WITH quarterly_forecast AS (\n  SELECT \n    a.appd_application_name,\n    f.month_start,\n    EXTRACT(QUARTER FROM f.month_start) as quarter,\n    EXTRACT(YEAR FROM f.month_start) as year,\n    SUM(f.projected_cost) as projected_cost\n  FROM forecast_fact f\n  JOIN applications_dim a ON f.app_id = a.app_id\n  WHERE f.month_start >= DATE_TRUNC('month', CURRENT_DATE)\n    AND f.month_start <= DATE_TRUNC('month', CURRENT_DATE) + INTERVAL '12 months'\n  GROUP BY a.appd_application_name, f.month_start\n)\nSELECT \n  appd_application_name as \"Application\",\n  COALESCE(SUM(projected_cost), 0) as \"Total 12-mo Projected\",\n  COALESCE(SUM(CASE WHEN quarter = 1 THEN projected_cost ELSE 0 END), 0) as \"Q1\",\n  COALESCE(SUM(CASE WHEN quarter = 2 THEN projected_cost ELSE 0 END), 0) as \"Q2\",\n  COALESCE(SUM(CASE WHEN quarter = 3 THEN projected_cost ELSE 0 END), 0) as \"Q3\",\n  COALESCE(SUM(CASE WHEN quarter = 4 THEN projected_cost ELSE 0 END), 0) as \"Q4\"\nFROM quarterly_forecast\nGROUP BY appd_application_name\nORDER BY \"Total 12-mo Projected\" DESC",
          "refId": "A"
        }
      ],
      "title": "Projected Cost by Application (Next 12 Months by Quarter)",
      "type": "table"
